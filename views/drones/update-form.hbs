<h2>Update the drone</h2>


<form method="post" action="/drones/{{this._id}}/edit">
  <label for="name">Name</label>
  <input type="text" name="name" value="{{this.name}}" />
  <br />
  <label for="propellers">Propellers</label>
  <input type="number" name="propellers" value="{{this.propellers}}"/>
  <br />
  <label for="maxSpeed">Max Speed</label>
  <input type="number" name="maxSpeed" value="{{this.maxSpeed}}"/>
  <br />
  <button type="submit">Update</button>
</form>